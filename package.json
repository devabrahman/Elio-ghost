{
    "name": "elio",
    "description": "Modern Blog & Newsletter theme for ghost publication",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev": "postcss ./assets/css/app.css -o ./assets/css/tailwind.css --watch",
        "watch": "onchange 'tailwind.config.js' './**/*.hbs' './src/**/*.css' -- npm run build",
        "build": "tailwindcss -i ./assets/css/app.css -o ./assets/css/tailwind.css -w"
    },
    "engines": {
        "ghost": ">=5.0.0"
    },
    "repository": {
        "type": "git",
        "url": "titi theme"
    },
    "author": {
        "name": "Visioun",
        "email": "hello@visioun.com",
        "url": "https://visioun.com"
    },
    "license": "ISC",
    "devDependencies": {
        "autoprefixer": "^10.4.7",
        "gulp": "^4.0.2",
        "postcss": "^8.4.14",
        "postcss-import": "^14.1.0",
        "tailwindcss": "^3.1.4"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Personal Blog",
            "Newsletter"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "personal",
        "minimal",
        "newsletter"
    ],
    "config": {
        "card_assets": {
            "exclude": [
                "blockquote",
                "bookmark",
                "image",
                "gallery"
            ]
        },
        "posts_per_page": 6,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {
        "jquery": "^3.6.0",
        "postcss-cli": "^10.0.0"
    }
}
