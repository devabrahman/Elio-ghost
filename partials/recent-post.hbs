<!-- Recent Post Start -->

<div>

    <h4
        class="text-xl font-medium dark:bg-gray-700 dark:text-white bg-white boxshadow py-3 pl-2 w-full border-b-8 border-solid border-accent_color rounded-xl boxshadow">
        Recent post
    </h4>
    <!-- Single Recent Posts Start -->
    {{#foreach posts limit="3" as | recent | }}
    <div class="flex justify-between w-full bg-white dark:bg-gray-700 dark:text-white rounded-2xl gap-5 mt-4 p-3 Single_blog_box_shadow ">
       <a href="{{url}}"  class="max-h-[85px] w-1/4"> 
     
        <img class="max-h-[100%] w-full rounded-xl object-cover self-center " src="  {{#if feature_image}}{{feature_image}} {{else}}  {{asset "img/card-bg.jpg"}}{{/if}}   "
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
   
            
            </a>
        <div class="flex flex-col gap-2 w-3/4">
           <a href="{{url}}"> <h3 class="font-medium text-[15px] ">{{title}}</a>
            </h3>
            <div class="flex gap-2 items-center text-[#C2C2C2] text-sm pt-3">
                  {{#primary_author}}
                <a href="{{url}}" class=" ">{{name}}</a>
                {{/primary_author}}
                <span class="w-1 h-1 bg-[#C2C2C2] rounded-full"></span>
                <p class="">{{reading_time}}ing</p>
            </div>
        </div>
    </div>
    {{/foreach}}
    <!-- Single Recent Posts End -->

</div>
<!-- Recent Post Start -->