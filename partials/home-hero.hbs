<header class="min-h-screen">
  <div class="relative">
   {{> "side-nav"}}


    <div class="slider owl-carousel absolute">
        {{#get "posts" limit="3" filter="featured:true" include="authors, tags"}}
    {{#foreach posts }}

      <!-- single Slider Start -->
      <div style="background-image:url({{feature_image}}" class="slider_single bg-slider-img-1 z-10">
        <div
          class="container px-8 md:px-32 text-white xl:absolute xl:left-1/2 xl:top-1/2 xl:-translate-x-1/2 xl:-translate-y-1/2"
        >
          <h1
            class="text-2xl md:text-4xl xl:text-5xl font-semibold leading-tight"
          >{{title}}
          </h1>
          <h4 class="text-base md:text-lg xl:text-xl pt-10 font-light">
           {{excerpt}}
          </h4>
        </div>
      </div>
      <!-- single Slider End -->
          
    {{/foreach}}
    {{/get}}

    </div>
  </div>
  <!-- Start Slider Pagination -->

  <!-- End Slider Pagination -->
</header>