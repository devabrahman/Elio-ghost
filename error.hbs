
{{!< default}}

    <header
        class="min-h-[15vh] relative flex flex-col justify-between bg-black/50"
    >
                   <img
                src="{{asset "img/card-bg.jpg"}}"

                alt="{{title}} "
                class="absolute w-full h-full left-0 bottom-0 object-cover z-[-1]"
            />
       
        {{> "side-nav"}}

        
    </header>
<section class="py-10">
    <div class="container">
        <section class=" text-center ">

            <h1 class="error-code text-[87px] text-red-700">{{statusCode}}</h1>
            <p class="error-description text-3xl">{{message}}</p>
            <p class="mt-20 border-2 w-max p-2 rounded-xl m-auto"><a href="{{@site.url}}">Go to the front page â†’</a></p>

            {{#if errorDetails}}
            <section class="error-stack">
                <h4>Theme errors:</h4>
                <ul class="error-stack-list">
                    {{#foreach errorDetails}}
                    <li>
                        <h5 class="error-stack-function">{{{rule}}}</h5>

                        {{#foreach failures}}
                        <span class="error-stack-file"><strong>Ref:</strong> {{ref}}</span><br>
                        <span class="error-stack-file"><strong>Message:</strong> {{message}}</span>
                        {{/foreach}}
                    </li>
                    {{/foreach}}
                </ul>
            </section>
            {{/if}}

        </section>

    </div>
</section>