{{!< default}} {{#post}} <header class="min-h-[60vh] relative flex flex-col justify-between bg-black/50">
    {{#if feature_image}}
    <img src="{{feature_image}}" alt="{{title}} " class="absolute w-full h-full left-0 bottom-0 object-cover z-[-1]" />
    {{/if}}
    {{> "side-nav"}}

    {{#if custom_excerpt}}
    <p class="it-excerpt">{{custom_excerpt}}</p>
    {{/if}}

    <!-- Author Info -->
    <div
        class="container text-center mt-[10vh] px-8 md:px-32 text-white self-end z-10 pb-16 xl:absolute xl:left-1/2 xl:top-1/2 xl:-translate-x-1/2 xl:-translate-y-1/2">
        <h1 class="text-2xl md:text-4xl xl:text-[57px] font-semibold md:leading-[1.3]">
            {{title}}
        </h1>
        {{#if custom_excerpt}}
        <h4 class="text-base md:text-lg xl:text-xl pt-6 font-light inline-flex items-center capitalize">
            {{custom_excerpt}}
        </h4>
        {{/if}}

    </div>
    </header>
    {{/post}}
    <!-- blog aria Start -->
    <main class="container p-3 sm:p-10  mt-2  sm:mt-12 ">
        <!-- blog part End -->
        <!-- Tags Section Start -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
            {{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
            {{#foreach tags}}
            <a href="{{url}}" class="group-hover:">
                <div
                    class=" flex h-40 relative bg-gradient-to-b single-tag-box-shadow from-transparent rounded-xl to-[#0000002e]">
                    <div class=" absolute h-full w-full z-[-1] ">
                        {{#if feature_image}}
                        <img class="object-cover rounded-xl w-full h-full" src="{{feature_image}}" alt="{{title}}">
                    {{/if}}
                    </div>
                    <h5 class="self-end z-10 mb-5 text-white ml-5  text-xl">{{name}}</h5>
                </div>
            </a>
            {{/foreach}}
            {{/get}}
        </div>
        </div>

        <!-- Tags Section End -->
    </main>