{{!< default}}
{{#post}}
  <body class="primary_fonts bg-white/60">
    <header
      class="min-h-screen relative flex flex-col justify-between bg-black/50"
    >
      <img
        src="{{feature_image}}"
        alt=""
        class="absolute w-full h-full left-0 bottom-0 object-cover z-[-1]"
      />
{{> "side-nav"}}

      <!-- single Slider Start -->
      <div
        class="container px-8 md:px-32 text-white self-end z-10 pb-16 xl:absolute xl:left-1/2 xl:top-1/2 xl:-translate-x-1/2 xl:-translate-y-1/2"
      >
        <h1
          class="text-2xl md:text-4xl xl:text-[57px] font-semibold md:leading-[1.3]"
        >{{title}}
        </h1>
        <h4
          class="text-base md:text-lg xl:text-xl pt-10 font-light inline-flex items-center capitalize"
        >
          {{#primary_author}}{{name}} {{/primary_author}}

          <span class="w-2 h-2 rounded-full mx-4 bg-white lowercase"></span>
          <span class="lowercase">{{reading_time}}ing</span>
        </h4>
        <div class="pt-[56px] flex gap-4">
          <a href="" class="inline-block">
            <img
              src="{{asset 'img/Facebook.png'}}"
              class="h-12 align-middle"
              alt=""
            />
          </a>

          <a href="" class="inline-block">
            <img
              src="{{asset 'img/Twitter.png'}}"
              class="h-12 align-middle"
              alt=""
            />
          </a>

          <a href="" class="inline-block">
            <img
              src="{{asset 'img/Instagram.png'}}"
              class="h-12 align-middle"
              alt=""
            />
          </a>

          <a href="" class="inline-block">
            <img
              src="{{asset 'img/Snapchat.png'}}"
              class="h-12 align-middle"
              alt=""
            />
          </a>
        </div>
      </div>

      <!-- Start Slider Pagination -->

      <!-- End Slider Pagination -->
    </header>

    <!-- Poster aria Start -->

    <section class="container flex p-3 sm:p-10 flex-wrap mt-16">
      <!-- Full blog part start -->
      <div class="mr-1 xl:mr-16 flex-wrap blog_row_flex_basis blog-content">
        <p class="text-[#2b2b2b] text-[18px] pb-16 leading-[31px] text-justify ">
          {{content}}
        </p>

      

      <!-- Next and previous Blog end-->
{{> "post-pagination"}}
      <!-- Full blog part End  -->
      <!-- side bar start -->
      <div class="lg:w-4/12 sm:w-10/12 sm:mr-auto sm:ml-auto pt-8 lg:pt-0">
        <!-- Recent Post Start -->
      {{> "recent-post"}}
        <!-- Recent Post Start -->

        <!-- Categories Start -->
      {{> "post-category"}}
        <!-- Categories End -->

        <!-- Newsletter Start -->
       {{> "newsletter"}}
        <!-- Newsletter End -->
      </div>
      <!-- Side bar End -->

    </section>

  </body>
{{/post}}